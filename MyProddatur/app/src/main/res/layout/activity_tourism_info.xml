<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_color5"
    tools:context=".Activity_Tourism_Info">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/corner_curve_style_about_title"
        android:elevation="15dp"
        android:padding="10dp"
        android:shadowColor="#977B7B"
        android:text="DISTANCE :"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="29sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_temples_description"
        app:layout_constraintEnd_toStartOf="@+id/tv_distance"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ib_route_location"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="38dp"
        android:background="@color/light_color3"
        android:elevation="15dp"
        android:scaleType="fitCenter"
        android:shadowColor="#977B7B"
        app:layout_constraintBottom_toTopOf="@+id/tv_distance"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/route"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/ib_more_info"
        android:background="@color/light_color3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="80dp"
        android:elevation="15dp"
        android:scaleType="fitCenter"
        android:shadowColor="#977B7B"
        app:layout_constraintBottom_toTopOf="@+id/ib_route_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_image"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/more_info"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="261dp"
        android:layout_height="260dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/tourist_info_imageview_shape"
        android:elevation="25dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/ib_route_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="29dp"
        android:background="@drawable/tourist_info_distance_info_style"
        android:elevation="25dp"
        android:shadowColor="#977B7B"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_temples_description"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_temples_description"
        android:layout_width="370dp"
        android:layout_height="280dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/tourism_info_tv_description_style"
        android:elevation="15dp"
        android:padding="10dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>